{
  "name": "npm",
  "version": "1.0.0",
  "description": "Landing page for Snackbarre a macOS app that adds custom text to your lock screen",
  "homepage": "https://github.com/thisisrogerflanagan/trysnackbarre#readme",
  "bugs": {
    "url": "https://github.com/thisisrogerflanagan/trysnackbarre/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thisisrogerflanagan/trysnackbarre.git"
  },
  "license": "ISC",
  "author": "Roger Flanagan",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all --parallel dev sass:watch",
    "dev": "npx @11ty/eleventy --serve",
    "build": "npm-run-all clean sass build:11ty",
    "build:11ty": "npx @11ty/eleventy",
    "sass": "sass src/scss/main.scss src/styles.css --style=compressed",
    "sass:watch": "sass src/scss/main.scss src/styles.css --watch --style=compressed",
    "clean": "rm -rf _site"
  },
  "dependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@parcel/watcher": "^2.5.1"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "sass": "^1.89.2"
  }
}
